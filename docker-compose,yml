version: '1'
services:
  moodle:
    image: moodle_m169
    ports:
      - 80:80
    depends_on:
      - database
    environment:
      - MYSQL_HOST=database
      - MYSQL_DATABASE=moodle
      - MYSQL_USER=moodle
    secrets:
      - mysql_password
    volumes:
      - ./moodledata:/var/www/html/moodledata

  database:
    image: mariadb_m169
    environment:
      - MYSQL_DATABASE=moodle
      - MYSQL_USER=moodle
    secrets:
      - mysql_password
      - mysql_root_password
    volumes:
      - ./dbdata:/var/lib/mysql

secrets:
  mysql_password:
    file: ./secrets/mysql_password.txt
  mysql_root_password:
    file: ./secrets/mysql_root_password.txt

volumes:
  moodledata:
  dbdata:
