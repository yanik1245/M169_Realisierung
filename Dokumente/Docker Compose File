version: '3.8'
services:
  moodle:
    image: moodlem169
    ports:
      - 80:80
    depends_on:
      - database
    environment:
      - MYSQL_HOST=database
      - MYSQL_DATABASE=moodle
      - MYSQL_USER=moodle
      - ALLOW_EMPTY_PASSWORD=yes
    secrets:
      - mysql_password
    volumes:
      - moodledata:/var/www/html/moodledata
    networks:
      - moodle_network

  database:
    image: mariadbm169
    environment:
      - MYSQL_DATABASE=moodle
      - MYSQL_USER=moodle
      - MYSQL_PASSWORD_FILE=/run/secrets/mysql_password
      - MYSQL_ROOT_PASSWORD_FILE=/run/secrets/mysql_root_password
    secrets:
      - mysql_password
      - mysql_root_password
    volumes:
      - dbdata:/var/lib/mysql
    networks:
      - moodle_network

secrets:
  mysql_password:
    file: ./secrets/mysql_password.txt
  mysql_root_password:
    file: ./secrets/mysql_root_password.txt

volumes:
  moodledata:
  dbdata:

networks:
  moodle_network:
    driver: bridge
